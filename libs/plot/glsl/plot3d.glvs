#version 330 

layout(location = 0) in float xpos;
layout(location = 1) in float ypos;
layout(location = 2) in float zpos;
layout(location = 3) in float att0;
layout(location = 4) in float att1;

in vec4 color;
out vec4 color_fs;

vec4 map_plot_to_screen3(in vec3 pnt);
vec4 map_color(in vec2 atts, in vec4 base_color);

void main()
{
	// transform vertex to clip space
	gl_Position = map_plot_to_screen3(vec3(xpos,ypos,zpos));
	color_fs = map_color(vec2(att0, att1), color);
}